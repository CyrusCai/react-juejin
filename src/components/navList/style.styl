.nav-wrapper
    width: 100%
    height 3.833rem
    .nav-list
        position: fixed
        top: 0
        max-width $max-width
        width: 100%
        box-sizing: border-box
        z-index: 998
        overflow-y: hidden
        overflow-x: scroll
        height 3.833rem
        background-color: #ffffff
        display: flex
        white-space nowrap
        transition: all 0.3s
        border-bottom: 1px solid #f1f1f1
        &.translate
            transform: translateY(-100%)
        .item
            padding: 0 1.5rem
            font-size: 1.16rem
            height 100%
            display: flex
            align-items: center
            .nav
                color: #71777c
                &.active
                    color: #007fff
