.book-list
    background-color: #ffffff
    .item
        padding: 16px 14px
        border-bottom: 1px solid #f1f1f1
        .link
            display: flex
            .icon-wrapper
                width: 52px
                height: 72px
                margin-right: 15px
                background-repeat: no-repeat
                background-size: cover
            .content
                flex: 1
                .title
                    color: #333333
                    media(1.34rem)
                    font-weight: bold
                    lineClamp()
                .author
                    margin-top 10px
                    .username
                        font-size: 14px
                        color: #000000
                .book-info
                    font-size: 13px
                    color: #71777c
                    opacity 0.6
                    margin-top 10px
                    .circle
                        margin: 0 3px
            .right-box
                margin-left: 10px
                display: flex
                align-items: center
                .price
                    display: inline-block
                    padding: 0 15px
                    height 30px
                    line-height: 30px
                    border-radius: 15px
                    font-size: 14px
                    background-color: #f0f7ff
                    color: #07f
