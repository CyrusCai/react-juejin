.tab-list-wrapper
    height: 50px
    .tab-list
        height: 50px
        overflow-y: hidden
        overflow-x: scroll
        background-color: #ffffff
        &.fixed
            position: fixed
            top: 61px
            left 0
            right 0
            z-index: 998
            transition: all 0.3s
        &.translate
            transform: translateY(-61px)
        .item
            width: 90px
            height: 100%
            display: flex
            align-items: center
            justify-content: center
            &.active
                box-shadow: inset 0 -2px 0 #3780f7
                color: #3780f7
            .text
                color: #31445b
                font-size: 1.333rem
            .count
                color: #b2bac2
                font-size: 1.25rem
                margin-left 0.4rem
